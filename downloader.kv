#:import lv kivy.uix.listview
#:import la kivy.adapters.listadapter

<FolderSelector>:
    drives_list: drives_list
    file_chooser: file_chooser
    BoxLayout:
        orientation: 'vertical'      
        ListView:
            id: drives_list
            height:"100dp"
            size_hint_y: None
            
            adapter:
                la.ListAdapter(data=root.get_win_drives(), selection_mode='single', allow_empty_selection=False, cls=lv.ListItemButton)
        FileChooserListView:
            id: file_chooser
        Button:
            text: "Select Folder"
            height:"60dp"
            size_hint_y: None
            on_release: root.selectfolder(file_chooser.path, file_chooser.selection)


<SearchGUI>:
	BoxLayout:
		orientation: 'vertical'
        search_input:inputText
        padding:70

		Label:
			text:"[u][b]ImageNet Downloader[/b][/u]"
			height:"200dp"
            size_hint_y: None
            font_size: "45dp"
            markup: True

		BoxLayout:
			height:"40dp"
			size_hint_y: None
			



			TextInput:
				size_hint_x:50
		
				id:inputText
				hint_text: "Search ImageNet"

			Button:
				size_hint_x:20
				id: clickButton
				text: "Search!"
				on_press: root.search(inputText)


		Label:
			text:"ImageNet is an image database organized according to the WordNet hierarchy (currently only the nouns), in which each node of the hierarchy is depicted by hundreds and thousands of images. Currently we have an average of over five hundred images per node. "
			text_size: self.width*0.75, None
    		
<DownloaderGUI>:
	BoxLayout:
		orientation: 'vertical'
        padding: 90, 90, 90, 200
        spacing:"50dp"
        


        Button:
        	height:"40dp"
			size_hint_y: None
			id: SelectButton
			text: "Search"
			on_press: root.GoBackToSearch() 
		Label:
			id:ImageCount
			height:"60dp"
			size_hint_y: None
			text:"Found 60 images of this"

		BoxLayout:
			height:"40dp"
			size_hint_y: None
			
			Label:
				size_hint_x:50		
				id:selectText
				text: "Select folder for images"
				color: 1,0,0,1

			Button:
				size_hint_x:20
				id: SelectButton
				text: "Select!"
				on_press: root.GotoSelector()

		BoxLayout:
			height:"40dp"
			size_hint_y: None
			
			ProgressBar:
        		id: pb
        		size_hint_x: 70
        		max:100
        		value:10
        		
        		
        		
			Button: 
				id:downloadb
				size_hint_x: 20
				text: "Download!"
				disabled: True
				on_press: root.download()
		



	
    		